<h1>Listing Projects</h1>

<table class="table">
  <thead>
    <tr>
      <th>Name</th><th>Actions</th>
    </tr>
  </thead>
  <tbody>
  	<% @projects.each do |project| %>
      <tr>
      	<td><%= project.name %></td>
      	<td>
      	  <%= link_to 'Show', project_path, :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Edit', edit_project_path, :class => 'btn btn-default btn-xs' %>
          <%= link_to 'Destroy', project_path, :confirm => 'Are you sure?', :method => :delete, :class => 'btn btn-danger btn-xs' %>
      	</td>
      </tr>
    <% end %>
  </tbody>
</table>
<%= link_to 'New Project', new_project_path %>